    <script src="../script/authentication.js"></script>
    <script>
        // DOMContentLoaded
         $(document).ready(function() {
            console.log('runnnnn');
            $('.register').submit(sendd);
        });

        function sendd(event){
            event.preventDefault();
            //get data and bind
            const user = {
                user_firstname: $('#firstname').val().trim(),
                user_lastname: $('#lastname').val().trim(),
                user_email: $('#email').val().trim(),
                user_password: $('#password').val().trim()
            }

            let errr = false;
            $('.fils').html('');

            //validate
            Object.entries(user).forEach(([key, value]) => {
                if(value === ""){
                    errr = true;
                }
            });
            
            if(!errr){
                //send data
                $.ajax({
                url: "/user/create",
                type: "POST",
                data: user,
                dataType: "json",
                beforeSend: function () {
                    console.log('loading');
                },
                success: function(response) {
                    console.log(response);
                    if(response.exist){
                        $('.fils').html('User Already Exist');
                    } else {
                        if(response.value === true){
                            window.location.href = "/user/verify";
                        }
                    }
                },
                complete: function () {
                    console.log('DONE');
                },
                error: function(xhr, status, error) {
                    console.error("Error:", error);
                }
                });
            } else if (errr) {
                $('.fils').html('Fill in all fields!');
            }
        }
    </script>
