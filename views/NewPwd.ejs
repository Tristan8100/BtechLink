<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#273461">
    <title>BTECHLINK</title>
    <link rel="icon" type="image/png" href="../image/AlumniLogo.jpg">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body class="font-sans select-none">
    <div class="flex w-full max-w-sm mx-auto overflow-hidden bg-red-white lg:max-w-full lg:h-full">
        <!--Left Side-->
        <div class="w-full m-7 mb-0 lg:w-80 lg:mx-auto lg:my-auto xl:w-90 2xl:w-110">
            <div class="flex items-start justify-start mx-auto">
                <img class="w-auto h-26" src="../image/AlumniLogo.jpg" alt="BTECH Alumni Logo" />
            </div>
            <p class="mt-2 text-3xl font-bold text-start text-gray-600">
                Create new password
            </p>
            <p class="mt-1 text-start font-light leading-4 text-gray-600">
                Please enter your new password to proceed.
            </p>

            <!--Form-->
            <form class="newpass">
                <div class="relative">
                    <label class="block text-sm text-gray-600 mt-5">New password</label>
                    <input id="new-password" class=" block w-full px-4 py-2 pr-10 text-gray-700 bg-white border border-gray-400 rounded-lg
                        focus:border-blue-400 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300
                        password-field" type="password" placeholder="At least 8 character" />
                    <span data-target="new-password" class="absolute top-8 right-4 ml-1 cursor-pointer toggle-password">
                        <!--ShowHideSVG-->
                        <svg class="h-auto w-5 text-gray-500 toggle-password-icon" xmlns="http://www.w3.org/2000/svg"
                            fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                            class="size-6 text-gray-600">
                            <!--without-->
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                    </span>
                </div>

                <div class="relative">
                    <label class="block text-sm text-gray-600 mt-1">Re-enter password</label>
                    <input id="re-enter-password"
                        class="block w-full px-4 py-2 pr-10 text-gray-700 bg-white border border-gray-400 rounded-lg focus:border-blue-400 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300 password-field"
                        type="password" placeholder="Confirm password" />
                    <span data-target="re-enter-password"
                        class="absolute top-8 right-4 ml-1 cursor-pointer toggle-password">
                        <!--ShowHideSVG-->
                        <svg class="h-auto w-5 text-gray-500 toggle-password-icon" xmlns="http://www.w3.org/2000/svg"
                            fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                            class="size-6 text-gray-600">
                            <!--without-->
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                    </span>
                </div>

                <!--Error Message-->
                <div class="flex justify-start mt-1 text-xs text-red-600 fils">
                    Passwords...
                </div>

                <div class="mt-4">
                    <button type="submit"
                        class="w-full px-6 py-[10px] text-md font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-[#273461] rounded-lg hover:bg-[#304384] focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-50">
                        Continue
                    </button>
                </div>

                <div class="mt-3 flex justify-center items-center">
                    <a class="text-xs text-blue-500 cursor-pointer hover:underline" href="Sign-in.html">Continue with
                        Password</a>
                </div>

            </form>
            <p class="block text-center text-[10px] text-gray-400 mt-10">
                Â© 2025 BTECH. All rights reserved.
            </p>
        </div>

        <!--Right side-->
        <div class="hidden lg:block lg:h-screen px-10 py-5 lg:w-1/2">
            <img src="https://btech.edu.ph/wp-content/uploads/2021/06/slide1.jpg" alt="Description of image"
                class="w-full h-full border-none rounded-2xl object-cover" />
        </div>
    </div>


    <script src="../script/authentication.js"></script>
    <script>
        // DOMContentLoaded
        $(document).ready(function() {
            console.log('runnnnn');
            $('.newpass').submit(sendd);
        });

        function sendd(event){
            event.preventDefault();

            let errr = false;
            let mess = "";
            $('.fils').html('');

            //validate pass
            if($('#re-enter-password').val().trim() === "" || $('#new-password').val().trim() === ""){
                errr = true;
                mess = "Fill all Fields";
            }

            //8 letter pass
            if($('#re-enter-password').val().trim().length < 8 || $('#new-password').val().trim().length < 8){
                errr = true;
                mess = "Password Should Be 8 Letters";
            }

            //compare pass
            if($('#re-enter-password').val().trim() != $('#new-password').val().trim()){
                errr = true;
                mess = "Password Don't Match";
            }


            //get data and bind
            const user = {
                user_password: $('#re-enter-password').val().trim()
            }

            console.log(user);

            
            if(!errr){
                //send data
                $.ajax({
                url: "/user/changepass",
                type: "POST",
                data: user,
                dataType: "json",
                beforeSend: function () {
                    console.log('loading');
                },
                success: function(response) {
                    console.log(response);
                   //
                   if(response.success){
                        window.location.href = "/user/login";
                   }
                },
                complete: function () {
                    console.log('DONE');
                },
                error: function(xhr, status, error) {
                    console.error("Error:", error);
                }
                });
            } else if (errr) {
                $('.fils').html(mess);
            }
        }
    </script>
</body>

</html>